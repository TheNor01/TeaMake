<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="648dp"
        android:layout_height="38dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:gravity="left"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/imageViewMainPic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/imageViewMainPic"
        android:layout_width="96dp"
        android:layout_height="106dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/llSummary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/llSummary"
        android:layout_width="221dp"
        android:layout_height="104dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07">


        <LinearLayout
            android:id="@+id/llSummaryTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/profileNameTV"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/linkIgImg"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1">

            </ImageView>
            <ImageView
                android:id="@+id/linkTikTokImg"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1">

            </ImageView>
        </LinearLayout>

        <EditText
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add a state"
            android:maxLength="20"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/myUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="378dp"
        android:layout_height="325dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMainPic"
        app:layout_constraintVertical_bias="0.342">

        <TextView
            android:id="@+id/myRidesTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#94DA43"
            android:textSize="20dp"
            android:gravity="center"
            android:text="My Rides"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textRideReceiveTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#94DA43"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Looking for a ride?"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textRideOfferTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#94DA43"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Offer a ride"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Your pending passengers"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pendingInvites"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_weight="1"

            android:background="#94DA43"
            android:scrollbars="vertical"
            android:text="Invites" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:text="Logout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/llSummary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMainPic"
        app:layout_constraintVertical_bias="0.206" />
</androidx.constraintlayout.widget.ConstraintLayout>